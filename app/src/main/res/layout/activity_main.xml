<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="in.corw.nycbartendersalestax.MainActivity">

   <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

       <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:columnCount="2">

            <TextView
                style="@style/label"
                android:text="Cocktails" />

            <EditText
                android:id="@+id/cocktails"
                style="@style/input" />

           <TextView
               style="@style/label"
               android:text="Beer" />

           <EditText
               android:id="@+id/beer"
               style="@style/input" />

           <TextView
               style="@style/label"
               android:text="Wine" />

           <EditText
               android:id="@+id/wine"
               style="@style/input" />

           <TextView
               style="@style/label"
               android:text="Food" />

           <EditText
               android:id="@+id/food"
               style="@style/input" />

           <TextView
               style="@style/label"
               android:text="Sub-Total" />

           <TextView
               android:id="@+id/subtotal"
               tools:text="0.00"
               style="@style/total" />

           <TextView
               style="@style/label"
               android:text="Tax" />

           <TextView
               android:id="@+id/tax"
               tools:text="0.00"
               style="@style/total" />

           <TextView
               style="@style/label"
               android:text="Total" />

           <TextView
               android:id="@+id/total"
               tools:text="0.00"
               style="@style/total" />

       </GridLayout>

   </FrameLayout>
</layout>
